<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 
        xmlns:control ="clr-namespace:WpfApp1.CustomControls">
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding NewGameCommand}"/>
        <KeyBinding Modifiers="Ctrl"  Key="A" Command="{Binding SelectAllCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">

            <Button Margin="5" Padding="15,0" Command="{Binding NewGameCommand}" Content="New"/>
            <TextBox Margin="5" Text="{Binding Rows}" FontSize="20"  FontWeight="Bold"/>
            <TextBox Margin="5" Text="{Binding Columns}" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <control:MyCustomControl Grid.Row="1"
                                 _RowCount="{Binding Rows}" 
                                 _ColumnCount="{Binding Columns}"  
                                 _Items="{Binding ReactionBlock}"
                                 _IsGenerateHeaders="True">
            <control:MyCustomControl._Style_ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Style="{StaticResource ReactionBlockBorder}">
                            <Viewbox HorizontalAlignment="Left">
                                <StackPanel>
                                    <TextBlock Text="{Binding Index}" Style="{StaticResource ReactionBlock_TextBlock}" Padding="3"/>
                                    <TextBlock Text="{Binding Position}" Style="{StaticResource ReactionBlock_TextBlock}" Padding="3"/>
                                </StackPanel>
                            </Viewbox>
                        </Border>
                    </Grid>
                </DataTemplate>
            </control:MyCustomControl._Style_ItemTemplate>
            <control:MyCustomControl._Style_HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="14">
                        <TextBlock.InputBindings>
                            <MouseBinding 
                                Command="{Binding DataContext.ClickOnHeaderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                MouseAction="LeftClick" 
                                CommandParameter="{Binding}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </DataTemplate>
            </control:MyCustomControl._Style_HeaderTemplate>
            <control:MyCustomControl._Style_SelectAllTemplate>
                <Label Content="SelectAll">
                    <Label.InputBindings>
                        <MouseBinding 
                                Command="{Binding DataContext.SelectAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                MouseAction="LeftClick" 
                                CommandParameter="{Binding}"/>
                    </Label.InputBindings>
                </Label>
            </control:MyCustomControl._Style_SelectAllTemplate>
        </control:MyCustomControl>

    </Grid>
</Window>
